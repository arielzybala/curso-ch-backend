<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../css/styles.css" />
        <title>HardwareBulls</title>
    </head>

    <body>
        <%- include("template/headerProducts") %>
        <div class="container wrap">
            <div class="container__frame" style="margin: 10px;">
                <h2 class="cardProduct__title">CATEGORIAS:</h2>
            </div>
            <div class="container__frame">
                <ul>
                    <li class="cardProduct__title hover" >
                        <a href="/api/products/cat/?category=notebook" style="color: black;">Notebooks</a>
                    </li>
                    <li class="cardProduct__title hover">
                        <a href="/api/products/cat/?category=tablet" style="color: black;">Tablets</a>
                    </li>
                    <li class="cardProduct__title hover">
                        <a href="/api/products/cat/?category=phone" style="color: black;">Celulares</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="wrap">
            <% products.map(product => {%>
                <div class="cardProduct">
                <div class="cardProduct__img">
                    <img class="cardProduct__thumbnail" alt="imagen de producto" src="../../media/products/<%-product.thumbnail%>">
                </div>
                <div class="cardProduct__frame">
                    <div class="cardProduct__title">
                        <h3><%-product.title-%></h3>
                    </div>
                    <div class="cardProduct__price">
                        <p>$ <%-product.price-%></p>
                    </div>
                    <div class="cardProduct__btnBox">
                        <button class="cardProduct__btn" id=<%-product.id-%>>
                            Detalles
                        </button>
                    </div>
                </div>
            </div>
            <% });%>
        </div>
        <script src="/js/main.js"></script>
        <script src="/js/productsCatalog.js"></script>
    </body>

</html>